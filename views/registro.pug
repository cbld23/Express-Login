doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Iniciar sesión
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
  body
    .container-fluid
      .row.justify-content-center.align-items-center.min-vh-100
        .col-12.col-md-6.col-lg-4
          .card.shadow-sm
            .card-body
              h2.card-title.text-center Regístrate
              form(action="/", method="POST")
                .mb-3
                  label(for="email", class="form-label") Email:
                  input(type="text", id="email", name="email", class="form-control",placeholder="Ingresa tu email", required)
                .mb-3
                  label(for="password", class="form-label") Contraseña:
                  input(type="password", id="password", name="password", class="form-control",placeholder="Ingresa tu contraseña", required)
                //button(type="submit", class="btn btn-primary w-100") Iniciar sesión
              form(action="/image/inicializarBaraja", method="POST")
                button(type="submit", class="btn btn-primary w-100") Log in
